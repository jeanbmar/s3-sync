{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "jest":  true
  },
  "rules":{
    "indent": ["error", 4],
    "linebreak-style": 0,
    "no-await-in-loop": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "max-len": ["error", 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": false,
      "ignoreRegExpLiterals": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["."]
      }
    }
  }
}
